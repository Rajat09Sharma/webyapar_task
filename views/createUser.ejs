<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="image\apple-touch-icon.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet">
    <title>Task</title>
</head>

<body>
    <div class="box image">
        <div class="row signup">

            <div class="col-lg-6 ">
                <main class="form-signup ">
                    <form action="/create" method="post">
                        <h1 class="h3 mb-3 fw-normal title-heading">Create User!</h1>
                        <div class="form-floating">
                            <input type="email" name="email" class="form-control bottom mt-3" placeholder="Email">
                            <input type="password" name="password" class="form-control bottom mt-3"
                                placeholder="Password">
                            <button class="w-100 btn btn-lg " type="submit">Login</button>
                        </div>
                    </form>
                </main>
            </div>
            <div class="col-lg-6">
                <main class="form-signup ">
                    <h1 class="h3 mb-3 fw-normal title-heading">View User</h1>
                    <% if(result){%>
                        <% result.forEach(data=>{ %>
                            <div class="container-viewbox">
                                <div class="view-container">
                                    <h4>
                                        <%= JSON.stringify(data.userID).slice(1,6)%>
                                    </h4>
                                </div>
                            </div>
                            <% })%>
                                <%} %>

                                    <button class="w-100 btn btn-lg " type="button"><a href="/view"
                                            class="giga">View</a></button>
                </main>
            </div>
            <p class="text-muted">&copy; Rajat Sharma</p>

        </div>
</body>

</html>